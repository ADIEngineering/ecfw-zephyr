/dts-v1/;

#include <microchip/mec172xnlj.dtsi>
#include <microchip/mec172x/mec172xnsz-pinctrl.dtsi> 
#include <microchip/mec172x/mec172xnlj-pinctrl.dtsi>
#include <zephyr/dt-bindings/pwm/pwm.h>
#include <zephyr/dt-bindings/reset/mec172x_reset.h>
#include <zephyr/dt-bindings/led/led.h>

/ {
	model = "Silicom Arizona Beach MEC172X EC";
	compatible = "microchip,mec172x_azbeach", "microchip,mec172xnlj";

	chosen {
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,console = &uart0;
	};

	aliases {
		i2c0 = &i2c_smb_0;
		i2c-0 = &i2c_smb_0;
		i2c3 = &i2c_smb_1;
		i2c11 = &i2c_smb_2;
		pwm-0 = &pwm0;
		peci-0 = &peci0;
		led-1 = &pwmmcled0;
	};

	gpio_keys {
		compatible = "gpio-keys";

		/* make a DT entry for the ESPI_RESET# input */
		espi_rst_maf: espi-rst {
			gpios = <&gpio_040_076 16 GPIO_ACTIVE_LOW>;
			label = "ESPI_RST_MAF";
		};
	};

	pwm_mc_leds: leds-pwm-mc {
		compatible = "pwm-leds-multicolor";

		pwmmcled0: led-0 {
			pwms = <&pwm4 0 PWM_MSEC(5) PWM_POLARITY_INVERTED>,
			       <&pwm5 0 PWM_MSEC(5) PWM_POLARITY_INVERTED>,
			       <&pwm6 0 PWM_MSEC(5) PWM_POLARITY_INVERTED>;
			color-mapping = <LED_COLOR_ID_RED>,
					<LED_COLOR_ID_GREEN>,
					<LED_COLOR_ID_BLUE>;
		};
	};

	pwmled0: pwmleds-0 {
		compatible = "pwm-leds";

		pwm_led0: led-0 {
			pwms= <&pwm8 0 PWM_MSEC(5) PWM_POLARITY_INVERTED>;
		};
	};
	pwmled1: pwmleds-1 {
		compatible = "pwm-leds";

		pwm_led1: led-1 {
			pwms = <&pwm3 0 PWM_MSEC(5) PWM_POLARITY_INVERTED>;
		};
	};

	gpioled0: gpioled-0 {
		compatible = "gpio-leds";
		gpio_led0: led-0 {
			/* GPIO032/KSI7/GPTP_OUT0/UART0_RI# */
			gpios = <&gpio_000_036 26 GPIO_ACTIVE_LOW>;
			label = "FP_AMB_LT";
		};
	};
	gpioled1: gpioled-1 {
		compatible = "gpio-leds";
		gpio_led1: led-1 {
			/* GPIO040/GPTP_OUT2/KSO00 */
			gpios = <&gpio_040_076 0 GPIO_ACTIVE_LOW>;
			label = "FP_AMB_CTR";
		};
	};
	gpioled2: gpioled-2 {
		compatible = "gpio-leds";
		gpio_led2: led-2 {
			/* GPIO041 */
			gpios = <&gpio_040_076 1 GPIO_ACTIVE_LOW>;
			label = "FP_AMB_RT";
		};
	};
	gpioled3: gpioled-3 {
		compatible = "gpio-leds";
		gpio_led3: led-3 {
			/* GPIO034 */
			gpios = <&gpio_000_036 28 GPIO_ACTIVE_LOW>;
			label = "FP_GRN_CTR";
		};
	};
	gpioled4: gpioled-4 {
		compatible = "gpio-leds";
		gpio_led4: led-4 {
			/* GPIO046 */
			gpios = <&gpio_040_076 6 GPIO_ACTIVE_LOW>;
			label = "FP_GRN_CTR";
		};
	};
	gpioled5: gpioled-5 {
		compatible = "gpio-leds";
		gpio_led5: led-5 {
			/* GPIO156 */
			gpios = <&gpio_140_176 14 GPIO_ACTIVE_LOW>;
			label = "FP_RED_RT";
		};
	};
	gpioled6: gpioled-6 {
		compatible = "gpio-leds";
		gpio_led6: led-6 {
			/* GPIO033 */
			gpios = <&gpio_000_036 27 GPIO_ACTIVE_LOW>;
			label = "FP_RED_CTR";
		};
	};
	bgpo0: bgpo@4000ac9c {
		compatible = "microchip,xec-bgpo";
		reg = < 0x4000ac9c 0xc >;
		status = "okay";
		label = "BGPO";
		gpio-controller;
		#gpio-cells = <2>;
		ngpios = <6>;
	};
	
	zephyr,user {
		signal-gpios = <&gpio_100_136 1 GPIO_ACTIVE_LOW>;
		pinctrl-0 = <&gpio101 &gpio102 &gpio172 &gpio173>;
		pinctrl-names = "default";
	};

};

&cpu0 {
	clock-frequency = <96000000>;
	status = "okay";
};

&uart0 {
	status = "okay";
	current-speed = <115200>;
	pinctrl-0 = <&uart0_tx_gpio104 &uart0_rx_gpio105>;
	pinctrl-names = "default";
};

&adc0 {
	status = "okay";
	pinctrl-0 = <&adc04_gpio204 &adc05_gpio205
		     &adc06_gpio206 &adc10_gpio212>;
	pinctrl-names = "default";
};

&pwm0 {
	status = "okay";
	pinctrl-0 = <&pwm0_gpio053>;
	pinctrl-names = "default";
};

&pwm1 {
	status = "okay";
	pinctrl-0 = <&pwm1_gpio054>;
	pinctrl-names = "default";
};

&pwm2 {
	status = "okay";
	pinctrl-0 = <&pwm2_alt_gpio045>;
	pinctrl-names = "default";
};

&pwm3 {
	status = "okay";
	pinctrl-0 = <&pwm3_alt_gpio047>;
	pinctrl-names = "default";
};

&pwm4 {
	status = "okay";
	pinctrl-0 = <&pwm4_alt_gpio001>;
	pinctrl-names = "default";
};

&pwm5 {
	status = "okay";
	pinctrl-0 = <&pwm5_gpio002>;
	pinctrl-names = "default";
};

&pwm6 {
	status = "okay";
	pinctrl-0 = <&pwm6_gpio014>;
	pinctrl-names = "default";
};

&pwm8 {
	status = "okay";
	pinctrl-0 = <&pwm8_gpio035>;
	pinctrl-names = "default";
};

&tach0 {
	status = "okay";
	pinctrl-0 = <&tach0_gpio050>;
	pinctrl-names = "default";
};

&tach1 {
	status = "okay";
	pinctrl-0 = <&tach1_gpio051>;
	pinctrl-names = "default";
};

/* Initialize ECIA. Does not initialize child devices */
&ecia {
	status = "okay";
};

/* Enable aggregated GIRQ24 and GIRQ25 for eSPI virtual wires interrupts */
&girq24 {
	status = "okay";
};

&girq25 {
	status = "okay";
};

&rtimer {
	status = "okay";
};

&pcr {
	status = "okay";
};

&espi0 {
	status = "okay";
	pinctrl-0 = < &espi_reset_n_gpio061 &espi_cs_n_gpio066
		      &espi_alert_n_gpio063 &espi_clk_gpio065
		      &espi_io0_gpio070 &espi_io1_gpio071
		      &espi_io2_gpio072 &espi_io3_gpio073 >;
	pinctrl-names = "default";
};

&spi0 {
	status = "okay";
	pinctrl-0 = < &pvt_cs_n_gpio124
		      &pvt_clk_gpio125
		      &pvt_io0_gpio121
		      &pvt_io1_gpio122
		      &pvt_io2_gpio123
		      &pvt_io3_gpio126 >;

	pinctrl-names = "default";
};

&acpi_ec0 {
	status = "okay";
};

&acpi_ec1 {
	status = "okay";
};

&peci0 {
	status = "okay";
	pinctrl-0 = <&peci_dat_gpio042>;
	pinctrl-names = "default";
};

&vci0 {
	compatible = "microchip,xec-vci-v2";
	gpio-controller;
	status = "okay";
	#gpio-cells=<2>;
};

&pinctrl {
	gpio101: gpio101 {
		pinmux = < MCHP_XEC_PINMUX(0101, MCHP_AF0) >;
	};
	gpio102: gpio102 {
		pinmux = < MCHP_XEC_PINMUX(0102, MCHP_AF0) >;
	};
	gpio172: gpio172 {
		pinmux = < MCHP_XEC_PINMUX(0172, MCHP_AF0) >;
	};
	gpio173: gpio173 {
		pinmux = < MCHP_XEC_PINMUX(0173, MCHP_AF0) >;
	};
};
